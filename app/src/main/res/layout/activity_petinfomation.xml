<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/petinfo_background"
    tools:context=".MainActivity">

    <RelativeLayout
        android:background="#28a9c6"
        android:layout_width="match_parent"
        android:layout_height="55dp">

        <ImageButton
            android:id="@+id/petinfo_back"
            android:layout_marginStart="10dp"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:src="@drawable/back"
            android:layout_width="30dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_alignParentTop="true"
            android:text="宠物信息"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="17sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:gravity="center_horizontal"
            android:background="#e7e7e7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="名字："
                android:textSize="17sp" />

            <EditText
                android:id="@+id/petinfo_name"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

        </LinearLayout>


        <LinearLayout
            android:gravity="center_horizontal"
            android:background="#e7e7e7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="年龄："
                android:textSize="17sp" />

            <EditText
                android:id="@+id/petinfo_age"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:background="#e7e7e7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="性别："
                android:textSize="17sp" />

            <EditText
                android:id="@+id/petinfo_gender"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:background="#e7e7e7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身高："
                android:textSize="17sp" />

            <EditText
                android:id="@+id/petinfo_height"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:background="#e7e7e7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="体重："
                android:textSize="17sp" />

            <EditText
                android:id="@+id/petinfo_weight"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:gravity="center_horizontal"
            android:background="#e7e7e7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品种："
                android:textSize="17sp" />

            <EditText
                android:id="@+id/petinfo_species"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:textSize="15sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/petinfo_edit"
            android:background="@drawable/btn_green_selector"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="编辑"
            android:textSize="15sp"
            android:textColor="#fff" />

        <Button
            android:id="@+id/petinfo_save"
            android:background="@drawable/btn_blue_selector"
            android:layout_marginStart="10dp"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:text="保存"
            android:textSize="15sp"
            android:textColor="#fff" />

    </LinearLayout>

</LinearLayout>